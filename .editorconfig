root = true

# 基本の設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# MarkDownファイルの設定
[*.md]
trim_trailing_whitespace = false

# html、Bladeテンプレートの設定
[*.{blade.php,html}]
indent_style = space
indent_size = 2

# スタイルシート関連の設定
[*.{css,scss}]
indent_style = space
indent_size = 2

# JavaScriptの設定
[*.js]
indent_style = space
indent_size = 2

# Jsonの設定
[*.json]
indent_style = space
indent_size = 2

# YAMLの設定
[*.yml]
indent_style = space
indent_size = 2
